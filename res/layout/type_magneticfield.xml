<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_view_magneticfield" >
    
    <ImageView
        android:id="@+id/icon_magneticfield"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="6dip"
        android:tag="magnetic_sensor"
        android:src="@drawable/magnetic_sensor" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_linear_layout_magneticfield"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:id="@+id/main_text_view_magneticfield"        
            android:gravity="center_vertical"
            android:text="Magnetic field" />
            
        <TextView  
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" 
            android:id="@+id/sensors_text_magneticfield"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="---" />
            
    </LinearLayout>
    

</LinearLayout>